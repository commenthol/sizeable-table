{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./types",
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "outDir": "./lib",
    "strict": true,
    "sourceMap": false,
    "removeComments": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "test/"
  ]
}
